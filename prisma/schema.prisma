generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  tasks    Task[]
}

model Board {
  id        String   @id @default(cuid())
  title     String
  userId    String
  columns   Column[]
  createdAt DateTime @default(now())
}

model Column {
  id       String @id @default(cuid())
  title    String
  boardId  String
  tasks    Task[]
  position Int
  Board    Board  @relation(fields: [boardId], references: [id])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  columnId    String
  position    Int
  dueDate     DateTime?
  User        User?     @relation(fields: [userId], references: [id])
  userId      String?
  Column      Column    @relation(fields: [columnId], references: [id])
}
